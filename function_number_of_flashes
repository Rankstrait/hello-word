//this funcntion allow to set how many flashes you want and the delay period after ever flash, the loop restart every time the flashes 
you input finish so there is a counter of complete cycle that print in the serial monitor the number of complete cycle finish.
The code:

const int ledPin=3;
const int delayPeriod=250;
int count=0;
void setup()
{
Serial.begin (9600);
pinMode(ledPin, OUTPUT);
Serial.println(count);  
}

void loop() {
flash(20, delayPeriod); 
delay(3000);
count ++;
Serial.println(count);
}

void flash(int numFlashes, int d)
{
for (int i=0; i< numFlashes ; i++)
{
digitalWrite(ledPin,HIGH);
delay (d);
digitalWrite(ledPin,LOW);
delay (d);
}
}
